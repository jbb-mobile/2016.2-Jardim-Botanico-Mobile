<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name= "colorPrimary">#00FF00</item>
        <item name= "colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name= "colorAccent">@color/colorAccent</item>
        <item name= "popupMenuStyle">@style/popupMenuStyle</item>

    </style>

    <style name="popupMenuStyle" parent="android:Theme.Holo.Light">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:popupBackground">@drawable/background_menu</item>
        <item name="android:itemBackground">@drawable/background_item</item>
        <item name="android:listDivider">@color/colorTransparent</item>
        <item name="android:dividerHeight">20dp</item>
    </style>

    <style name="Title" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text" parent="TextAppearance.ShowcaseView.Detail">
        <item name="android:textColor">#003300</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Transparency" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#ca21b684</item>
        <item name="sv_showcaseColor">#003300</item>
        <item name="sv_titleTextAppearance">@style/Title</item>
        <item name="sv_detailTextAppearance">@style/Text</item>
    </style>

    <style name="Final" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#ca21b684</item>
        <item name="sv_showcaseColor">#003300</item>
        <item name="sv_titleTextAppearance">@style/Title</item>
        <item name="sv_detailTextAppearance">@style/Text</item>
    </style>

</resources>